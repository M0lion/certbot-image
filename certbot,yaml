apiVersion: apps/v1
kind: Deployment
metadata:
  name: certbot
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: certbot
  template:
    metadata:
      labels:
        app: certbot
    spec:
      containers:
      - name: certbot-pod
        image: docker.pkg.github.com/M0lion/certbot-image/certbot-image:latest
      imagePullSecrets:
      - name: dockerconfigjson-github-com
---
apiVersion: v1
kind: Service
metadata:
  name: certbot-service
spec:
  selector:
    app: certbot
  ports:
  - name: http
    port: 80
    targetPort: 80
